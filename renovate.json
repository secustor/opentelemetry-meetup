{
  "$schema":"https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
    "config:best-practices"
  ],
  "helmsman": {
    "fileMatch": [
      "setup.yaml"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["helmsman"],
      "groupName": "helm releases"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["opentelemetry-collector/Chart.yaml"],
      "matchStrings": [
        "appVersion: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "otel/opentelemetry-collector-contrib"
    }
  ]
}
